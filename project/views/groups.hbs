
<section class="groups"  id="{{groupsMessege}}">
	<div class="container">
    	<div class="card w-100">
        	<div class="card-body">
            	<form action="/add_groups" method="POST" class="form-horizontal">
                	<div class="form-group">
                    	<label for="name" class="control-label">Группа</label>
                    	<div>
                        	<input type="text" name="group" class="form-control"/>
                    	</div>
                	</div>

                	<div class="form-group mb-0">
                    	<div class="w-100">
                        	<button type="submit" class="btn_add">Добавить группу</button>
                    	</div>
                	</div>
            	</form>
        	</div>
    	</div>

    	<div class="card mt-4 w-100">
        	<div class="card-header">
				Список групп
        	</div>
        	<div class="card-body">
            	<table class="table table-striped">
                    <tbody>
                    {{#each groups}}
                    	<tr>
                    		<td class="table-text"> <p>{{this.name}}</p></td>
                   			<td>
                        		<form action="/remove{{this.id}}" method="POST">                    
                            		<button type="submit" class="btn_delete_status" name="{{this.id}}">Удалить</button>
                        		</form>
                    		</td>
                		</tr>
                    {{/each}}  
                	</tbody>
            	</table>
        	</div>
    	</div>
	</div>
</section>